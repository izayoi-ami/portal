<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{class: "ui form segment"}) do |f| %>
	<div class="field">
	<%= f.label :username%>
	<div class="ui left labeled icon input">
		<%= f.text_field :username, autofocus: true %>
		<i class="user icon"></i>
		<div class="ui corner label"><i class="icon asterisk"></i></div>
	</div>
	</div>

	<div class="field">
	<%= f.label :password %>
	<div class="ui left labeled icon input">
		<%= f.password_field :password, autocomplete: "off" %>
		<i class="lock icon"></i>
		<div class="ui corner label"><i class="icon asterisk"></i></div>
	</div>
	</div>

  <% if devise_mapping.rememberable? -%>
	<div class="ui checkbox">
		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	</div>
  <% end %>
  <%= f.submit "Login", class: "top attached ui blue submit button" %>

<% end %>

<%= render "devise/shared/links" %>
