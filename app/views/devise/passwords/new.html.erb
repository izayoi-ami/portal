<div class="ui info message">
	<div class="header">
		Forgot your password?
	</div>
	<div class="ui ordered list">
	<div class="item">Fill in your email address below and click the button.</div>
	<div class="item">Call 440, KCW, KHY or WHP for further instructions.</div>
	</div>
</div>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"ui form segment" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
	  <%= f.label :email %>
	  <div class="ui left labeled icon input">
		  <%= f.email_field :email, autofocus: true, :autocomplete=>"off" %>
		  <i class="mail icon"></i>
	  </div>
  </div>

<div>
	<%= f.submit "Reset password", class:"top attached ui teal submit button" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
